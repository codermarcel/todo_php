{% extends 'base.html.twig' %}

{% block title %}TodoItem index{% endblock %}

{% block body %}
    <h1>TodoItem index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Text</th>
                <th>IsFinished</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for todo_item in todo_items %}
            <tr>
                <td>{{ todo_item.id }}</td>
                <td>{{ todo_item.text }}</td>
                <td>{{ todo_item.isFinished ? 'Yes' : 'No' }}</td>
                <td>{{ todo_item.createdAt }}</td>
                <td>
                    <a href="{{ path('app_todo_item_show', {'id': todo_item.id}) }}">show</a>
                    <a href="{{ path('app_todo_item_edit', {'id': todo_item.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_todo_item_new') }}">Create new</a>
{% endblock %}
